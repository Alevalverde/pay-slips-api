{
  "name": "pay-slips-api",
  "version": "1.0.0",
  "description": "SFJ API",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon -r tsconfig-paths/register src/index.ts",
    "server:prod": "npm run build && NODE_ENV=production node -r tsconfig-paths/register ./dist/src/index.js",
    "server:prod:docker": "node -r tsconfig-paths/register ./src/index.js",
    "prepare": "husky install",
    "build": "ts-node build.ts && tsc-alias -p tsconfig.json",
    "test": "jest --config=jest.config.unit.js",
    "test:integration": "jest  --detectOpenHandles --config=jest.config.integration.js",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "lint": "eslint src --cache --ext .ts",
    "lint:fix": "eslint src --cache --fix --ext .ts",
    "pre-commit": "lint-staged",
    "debug": "nodemon -e ts,tsx --exec node -r ts-node/register -r tsconfig-paths/register --inspect src/index.ts",
    "prettier:code-check": "prettier --check --no-error-on-unmatched-pattern --ignore-unknown ./**/*",
    "prettier:fix": "prettier --write --no-error-on-unmatched-pattern --ignore-unknown ./**/*"
  },
  "repository": {
    "type": "git"
  },
  "author": "ALEJANDRO VALVERDE",
  "license": "ISC",
  "engines": {
    "node": ">20.0.0",
    "npm": ">10.0.0"
  },
  "dependencies": {
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.1.2",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "mongodb": "^6.8.0",
    "mongoose": "^8.3.0",
    "swagger-ui-express": "^5.0.0",
    "tsc-alias": "^1.8.8",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write --no-error-on-unmatched-pattern --ignore-unknown",
    "*.ts": "npm run lint --"
  }
}
